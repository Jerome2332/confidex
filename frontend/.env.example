# Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_RPC_ENDPOINT=https://api.devnet.solana.com

# Helius API
NEXT_PUBLIC_HELIUS_API_KEY=your_helius_api_key_here

# Program ID (set after deployment)
NEXT_PUBLIC_PROGRAM_ID=your_program_id_here

# Feature Flags
NEXT_PUBLIC_ENABLE_PRIVACY_ONRAMP=true
NEXT_PUBLIC_ENABLE_SHADOWWIRE=true

# PNP Prediction Markets
# Set to 'devnet' for testing with PNP's devnet USDC: Gh9ZwEmdLJ8DscKNTkTqPbNwLNNBjuSzaG9Vp2KGtKJr
# Set to 'mainnet' for real trading (862+ markets with real USDC)
NEXT_PUBLIC_PNP_NETWORK=devnet
NEXT_PUBLIC_PNP_DEVNET_RPC=https://devnet.helius-rpc.com/?api-key=your_helius_api_key_here
NEXT_PUBLIC_PNP_MAINNET_RPC=https://mainnet.helius-rpc.com/?api-key=your_helius_api_key_here

# PNP Devnet Configuration
# Devnet USDC token mint for PNP markets
NEXT_PUBLIC_PNP_DEVNET_COLLATERAL=
# Devnet Program ID for PNP
NEXT_PUBLIC_PNP_DEVNET_PROGRAM=

# PNP Server Wallet (for market creation - devnet only!)
# Format: base58 encoded private key OR JSON array [1,2,3,...]
# Generate with: solana-keygen new --outfile ~/.config/solana/pnp-devnet.json
PNP_SERVER_WALLET_SECRET=

# ZK Proof Server (for real Groth16 proof generation)
# Required in production. In development, proofs fail gracefully if server unavailable.
NEXT_PUBLIC_PROOF_SERVER_URL=http://localhost:3001

# Strict proof mode - when true, requires proof server even in development
# Automatically enabled in production (NODE_ENV=production)
# NEXT_PUBLIC_STRICT_PROOFS=false

# ZK Proofs Feature Flag
# Set to 'false' to disable ZK proof generation (demo mode)
# When disabled, simulated proofs are used and a banner is shown
# Useful for demos/hackathons without dedicated ZK infrastructure (nargo, sunspot)
# NEXT_PUBLIC_ZK_PROOFS_ENABLED=true
#
# For demo/video recording mode, set both to false:
# NEXT_PUBLIC_ZK_PROOFS_ENABLED=false
# NEXT_PUBLIC_REQUIRE_VERIFICATION=false
# NEXT_PUBLIC_USE_SPOT_MXE=false (uses legacy DEX with C-SPL balances)

# =============================================================================
# Wallet Verification Configuration
# =============================================================================

# Require wallet verification at connection time (default: true)
# When true, users must pass ZK eligibility proof to access the platform
# When false, all wallets can access without verification
# NEXT_PUBLIC_REQUIRE_VERIFICATION=true

# Verification cache TTL in milliseconds (default: 24 hours)
# How long a verified wallet stays verified before needing re-verification
# NEXT_PUBLIC_VERIFICATION_TTL_MS=86400000

# Verification poll interval in milliseconds (default: 0 = disabled)
# When 0, uses WebSocket push for blacklist updates (recommended)
# When > 0, polls backend for blacklist root changes
# NEXT_PUBLIC_VERIFICATION_POLL_MS=0

# =============================================================================
# Encryption Provider Configuration
# =============================================================================

# MXE Program IDs (Arcium MPC)
# Architecture: separate MXE per domain (recommended by Arcium)
# Deployed: 2026-01-31 to cluster 456 with CircuitSource::OffChain pattern (fresh keys)
NEXT_PUBLIC_SPOT_MXE_PROGRAM_ID=AMm9J2fNYDBREvDZhQDniz7i6QyKwUZ6cFiQBi1P5SVS
NEXT_PUBLIC_PERPS_MXE_PROGRAM_ID=CSTs9KjTmnwu3Wg76kE49Mgud2GyAQeQjZ66zicTQKq9
# Legacy alias (points to spot for backwards compatibility)
NEXT_PUBLIC_MXE_PROGRAM_ID=AMm9J2fNYDBREvDZhQDniz7i6QyKwUZ6cFiQBi1P5SVS

# Arcium Cluster Configuration
# Cluster 456: v0.6.3 (recommended)
# Recovery set size: 4 nodes (required for devnet)
# Reference: https://docs.arcium.com/developers/deployment
